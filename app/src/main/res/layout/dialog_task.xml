<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#DDDDDD"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etDialogTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:hint="@string/add_task_dialog"
        android:inputType="text"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500" />

    <EditText
        android:id="@+id/etDialogWorkingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:backgroundTint="@color/purple_500"
        android:hint="@string/work_time"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500" />

    <EditText
        android:id="@+id/etDialogRestTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:hint="@string/rest_time"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500" />

    <Button
        android:id="@+id/btnDialogAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/btn_accept" />

</androidx.appcompat.widget.LinearLayoutCompat>